{% apply inline_css %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .header {
            background-color: #ff4d4d;
            padding: 10px;
            border-radius: 8px 8px 0 0;
            color: #ffffff;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }
        .content {
            padding: 20px;
            text-align: center;
            font-size: 16px;
        }
        .button {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            font-size: 16px;
        }
        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 12px;
            color: #888888;
        }
    </style>

    <div class="container">
        <div class="header">
            Service Down Notification
        </div>
        <div class="content">
            <p>Hi {{ username }},</p>
            <p>We have detected that {{ service }} service is currently down.</p>
            <a href="{{ action_url }}" class="button">View Status</a>
        </div>
        <div class="footer">
            <p>Sentinel Monitoring System</p>
        </div>
    </div>
{% endapply %}